<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/fondo">

    <EditText
        android:id="@+id/edit_clientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edit_clientName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_direcction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_direction" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_nro"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" 
            android:hint="@string/edit_nro"/>

        <EditText
            android:id="@+id/edit_zone"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:hint="@string/edit_zone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/spn_canal"
            android:layout_width="153dp"
            android:layout_height="43dp" />

        <Spinner
            android:id="@+id/spn_tipoLocal"
            android:layout_width="wrap_content"
            android:layout_height="42dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_phones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone" 
        android:hint="@string/edit_phones"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_dateBorn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_dateBorn" />

        <EditText
            android:id="@+id/edit_dateBorn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" 
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edit_ruta"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edit_ruta"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_saveClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_saveClient" />

</LinearLayout><!-- From: file:/C:/Users/jcarlos.porcel.SIDS/AndroidStudioProjects/Sureguila1/app/src/main/res/layout/client_register.xml -->